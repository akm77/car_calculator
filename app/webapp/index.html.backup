                { label: '–í–æ–∑–Ω–∞–≥—Ä–∞–∂–¥–µ–Ω–∏–µ –∫–æ–º–ø–∞–Ω–∏–∏', amount: breakdown.company_commission_rub }
            ];

            items.forEach(item => {
                if (item.amount > 0) {
                    const div = document.createElement('div');
                    div.className='breakdown-item';
                    div.innerHTML=`<span class="breakdown-label">${item.label}</span><span class="breakdown-amount">${formatNumber(item.amount)} ‚ÇΩ</span>`;
                    breakdownDiv.appendChild(div);
                }
            });

            const totalDiv = document.createElement('div');
            totalDiv.className='breakdown-item';
            totalDiv.innerHTML=`<span class="breakdown-label">–ò–¢–û–ì–û</span><span class="breakdown-amount">${formatNumber(breakdown.total_rub)} ‚ÇΩ</span>`;
            breakdownDiv.appendChild(totalDiv);

            // Engine/duty details
            const engineDisplay = (meta && meta.volume_band && meta.volume_band !== 'value_brackets' && meta.volume_band !== 'n/a')
                ? meta.volume_band
                : (result?.request?.engine_cc ? `${result.request.engine_cc} —Å–º¬≥` : '‚Äî');

            const parts = [];

            // Country label on results page (from request or current selection)
            const countryCode = result?.request?.country || selectedCountry;
            if (countryCode) {
                const countryLabel = getCountryLabel(countryCode);
                parts.push(`<div>–°—Ç—Ä–∞–Ω–∞ –ø–æ–∫—É–ø–∫–∏: ${countryLabel}</div>`);
            }

            parts.push(`<div>–í–æ–∑—Ä–∞—Å—Ç –∞–≤—Ç–æ: ${meta.age_years} –ª–µ—Ç (${getAgeCategory(meta.age_category)})</div>`);
            parts.push(`<div>–û–±—ä–µ–º –¥–≤–∏–≥–∞—Ç–µ–ª—è: ${engineDisplay}</div>`);

            // Duty details
            if (meta.customs_value_eur != null) {
                parts.push(`<div>–¢–∞–º–æ–∂–µ–Ω–Ω–∞—è —Å—Ç–æ–∏–º–æ—Å—Ç—å: ${formatNumber(Math.round(meta.customs_value_eur))} ‚Ç¨</div>`);
            }
            if (meta.duty_formula_mode === 'percent') {
                if (meta.duty_percent != null) {
                    parts.push(`<div>–ü–æ—à–ª–∏–Ω–∞: ${Math.round(meta.duty_percent * 100)}% –æ—Ç —Å—Ç–æ–∏–º–æ—Å—Ç–∏ (–º–∏–Ω–∏–º—É–º –ø–æ ‚Ç¨/—Å–º¬≥)</div>`);
                }
                if (meta.duty_min_rate_eur_per_cc != null) {
                    parts.push(`<div>–ú–∏–Ω. —Å—Ç–∞–≤–∫–∞: ${meta.duty_min_rate_eur_per_cc} ‚Ç¨/—Å–º¬≥</div>`);
                }
                if (meta.duty_value_bracket_max_eur != null) {
                    parts.push(`<div>–î–∏–∞–ø–∞–∑–æ–Ω –¥–æ: ${formatNumber(meta.duty_value_bracket_max_eur)} ‚Ç¨</div>`);
                }
            } else if (meta.duty_formula_mode === 'per_cc' && meta.duty_rate_eur_per_cc != null) {
                parts.push(`<div>–°—Ç–∞–≤–∫–∞ –ø–æ—à–ª–∏–Ω—ã: ${meta.duty_rate_eur_per_cc} ‚Ç¨/—Å–º¬≥</div>`);
            }

            if (meta.vehicle_type && meta.vehicle_type !== 'M1') {
                parts.push('<div style="color:#e67e22;margin-top:8px;">–†–∞—Å—á–µ—Ç –≤—ã–ø–æ–ª–Ω–µ–Ω —Å –¥–æ–ø—É—â–µ–Ω–∏—è–º–∏ –¥–ª—è –Ω–µ-M1. –£—Ç–æ—á–Ω–∏—Ç–µ —É—Å–ª–æ–≤–∏—è —É –ø–æ–¥–¥–µ—Ä–∂–∫–∏.</div>');
            }

            if (meta.warnings && meta.warnings.length) {
                parts.push('<div style="color:#e74c3c;margin-top:8px;">‚ö†Ô∏è ' + meta.warnings.map(w=>w.message).join('<br>‚ö†Ô∏è ') + '</div>');
            }

            const metaDiv = document.getElementById('metaInfo');
            metaDiv.innerHTML = parts.join('');

            document.getElementById('resultCard').classList.add('show');
            document.getElementById('shareBtn').style.display='block';
            window.lastCalculationResult = result;
        }

        // Resolve country code to label (prefers API meta, falls back to local map)
        function getCountryLabel(code) {
            try {
                if (metaData && Array.isArray(metaData.countries)) {
                    const entry = metaData.countries.find(c => c.code === code);
                    if (entry) return (entry.emoji ? entry.emoji + ' ' : '') + (entry.label || code);
                }
            } catch (e) { /* ignore */ }
            const fallback = { japan: 'üáØüáµ –Ø–ø–æ–Ω–∏—è', korea: 'üá∞üá∑ –ö–æ—Ä–µ—è', uae: 'üá¶üá™ –û–ê–≠', china: 'üá®üá≥ –ö–∏—Ç–∞–π' };
            return fallback[code] || code;
        }
        function shareResult() {
            if (!window.lastCalculationResult) return;
            const res = window.lastCalculationResult;
            const resultStr = document.getElementById('totalAmount').textContent;

            // Build full multi-line breakdown text
            const b = res.breakdown || {};
            const r = res.request || {};
            const m = res.meta || {};
            const fnum = (n) => (typeof n === 'number' ? new Intl.NumberFormat('ru-RU').format(n) : n);

            // Resolve country for sharing
            const countryCode = r.country || selectedCountry;
            const countryLabel = countryCode ? getCountryLabel(countryCode) : '';

            const lines = [];
            lines.push('üöó –†–∞—Å—á–µ—Ç —Ä–∞—Å—Ç–∞–º–æ–∂–∫–∏');
            if (countryLabel) lines.push(`–°—Ç—Ä–∞–Ω–∞ –ø–æ–∫—É–ø–∫–∏: ${countryLabel}`);
            if (r.year) lines.push(`–ì–æ–¥ –≤—ã–ø—É—Å–∫–∞: ${r.year}`);
            if (r.engine_cc) lines.push(`–û–±—ä–µ–º –¥–≤–∏–≥–∞—Ç–µ–ª—è: ${r.engine_cc} —Å–º¬≥`);
            if (r.purchase_price && r.currency) lines.push(`–¶–µ–Ω–∞ –ø–æ–∫—É–ø–∫–∏: ${fnum(r.purchase_price)} ${r.currency}`);
            if (r.freight_type) lines.push(`–¢–∏–ø —Ñ—Ä–∞—Ö—Ç–∞: ${r.freight_type}`);
            if (m.age_years !== undefined && m.age_category) lines.push(`–í–æ–∑—Ä–∞—Å—Ç: ${m.age_years} –ª–µ—Ç (${getAgeCategory(m.age_category)})`);
            lines.push('');
            lines.push('–î–µ—Ç–∞–ª–∏–∑–∞—Ü–∏—è:');
            if (b.purchase_price_rub) lines.push(`‚Ä¢ –¶–µ–Ω–∞ –ø–æ–∫—É–ø–∫–∏: ${fnum(b.purchase_price_rub)} ‚ÇΩ`);
            if (b.duties_rub) lines.push(`‚Ä¢ –¢–∞–º–æ–∂–µ–Ω–Ω–∞—è –ø–æ—à–ª–∏–Ω–∞: ${fnum(b.duties_rub)} ‚ÇΩ`);
            if (b.utilization_fee_rub) lines.push(`‚Ä¢ –£—Ç–∏–ª–∏–∑–∞—Ü–∏–æ–Ω–Ω—ã–π —Å–±–æ—Ä: ${fnum(b.utilization_fee_rub)} ‚ÇΩ`);
            if (b.customs_services_rub) lines.push(`‚Ä¢ –¢–∞–º–æ–∂–µ–Ω–Ω–æ–µ –æ—Ñ–æ—Ä–º–ª–µ–Ω–∏–µ: ${fnum(b.customs_services_rub)} ‚ÇΩ`);
            if (b.era_glonass_rub) lines.push(`‚Ä¢ –≠—Ä–∞-–ì–ª–æ–Ω–∞—Å—Å: ${fnum(b.era_glonass_rub)} ‚ÇΩ`);
            if (b.freight_rub) lines.push(`‚Ä¢ –§—Ä–∞—Ö—Ç: ${fnum(b.freight_rub)} ‚ÇΩ`);
            if (b.country_expenses_rub) lines.push(`‚Ä¢ –†–∞—Å—Ö–æ–¥—ã –≤ —Å—Ç—Ä–∞–Ω–µ: ${fnum(b.country_expenses_rub)} ‚ÇΩ`);
            if (b.company_commission_rub) lines.push(`‚Ä¢ –ö–æ–º–∏—Å—Å–∏—è –∫–æ–º–ø–∞–Ω–∏–∏: ${fnum(b.company_commission_rub)} ‚ÇΩ`);
            if (b.total_rub) {
                lines.push('');
                lines.push(`–ò–¢–û–ì–û: ${fnum(b.total_rub)} ‚ÇΩ`);
            }
            if (Array.isArray(m.warnings) && m.warnings.length) {
                lines.push('');
                lines.push('–ü—Ä–µ–¥—É–ø—Ä–µ–∂–¥–µ–Ω–∏—è:');
                m.warnings.forEach(w => lines.push(`‚Ä¢ ${w.message}`));
            }
            const detailText = lines.join('\n');

            // Short share text now contains country
            const shareText = countryLabel
                ? `üöó –†–∞—Å—á–µ—Ç —Ä–∞—Å—Ç–∞–º–æ–∂–∫–∏ –∏–∑ ${countryLabel}: ${resultStr}`
                : `üöó –†–∞—Å—á–µ—Ç —Ä–∞—Å—Ç–∞–º–æ–∂–∫–∏: ${resultStr}`;

            // Check if we're in Telegram
            const inTelegram = telegram.isInTelegram();

            // Always copy to clipboard first
            const copyFallback = (text) => {
                try {
                    const ta = document.createElement('textarea');
                    ta.value = text;
                    ta.style.position = 'fixed';
                    ta.style.left = '-9999px';
                    document.body.appendChild(ta);
                    ta.focus();
                    ta.select();
                    const ok = document.execCommand('copy');
                    document.body.removeChild(ta);
                    return ok;
                } catch (e) {
                    return false;
                }
            };

            const doCopy = async (text) => {
                if (navigator.clipboard && navigator.clipboard.writeText) {
                    try {
                        await navigator.clipboard.writeText(text);
                        return true;
                    } catch (e) {
                        return copyFallback(text);
                    }
                } else {
                    return copyFallback(text);
                }
            };

            // Copy to clipboard
            doCopy(detailText).then((copied) => {
                if (copied) {
                    showToast('–†–µ–∑—É–ª—å—Ç–∞—Ç —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω –≤ –±—É—Ñ–µ—Ä –æ–±–º–µ–Ω–∞', 'success');
                } else {
                    showToast('–ù–µ —É–¥–∞–ª–æ—Å—å —Å–∫–æ–ø–∏—Ä–æ–≤–∞—Ç—å', 'error');
                }
            });

            // If in Telegram, also try to send to chat
            if (true) {
                try {
                    const totalVal = b.total_rub;

                    // Prepare data for Telegram (includes country label)
                    const telegramData = {
                        action: 'share_result',
                        text: shareText,
                        summary: shareText,
                        detail: detailText,
                        total: totalVal,
                        total_rub: totalVal,
                        country: r.country || selectedCountry,
                        country_label: countryLabel,
                        year: r.year,
                        engine_cc: r.engine_cc,
                        currency: r.currency,
                        purchase_price: r.purchase_price,
                        freight_type: r.freight_type,
                        formatted_total: fnum(totalVal)
                    };

                    const sent = telegram.sendDataSafe(telegramData);

                    if (sent) {
                        showToast('–†–µ–∑—É–ª—å—Ç–∞—Ç –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω –≤ —á–∞—Ç', 'success');
                        telegram.hapticFeedback('medium');

                        setTimeout(() => {
                            try { telegram.close(); } catch (e) { console.warn('Failed to close WebApp:', e); }
                        }, 800);
                    } else {
                        showToast('–ù–µ —É–¥–∞–ª–æ—Å—å –æ—Ç–ø—Ä–∞–≤–∏—Ç—å –≤ —á–∞—Ç', 'error');
                        telegram.hapticFeedback('heavy');
                    }
                } catch (e) {
                    console.error('Exception while sending to Telegram:', e);
                    showToast('–û—à–∏–±–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏ –≤ Telegram', 'error');
                    telegram.hapticFeedback('heavy');

                    if (window.Telegram?.WebApp?.showAlert) {
                        window.Telegram.WebApp.showAlert('–ß—Ç–æ–±—ã –æ—Ç–ø—Ä–∞–≤–∫–∞ —Ä–∞–±–æ—Ç–∞–ª–∞, –æ—Ç–∫—Ä–æ–π—Ç–µ –∫–∞–ª—å–∫—É–ª—è—Ç–æ—Ä —á–µ—Ä–µ–∑ –∫–Ω–æ–ø–∫—É –≤ —á–∞—Ç–µ –±–æ—Ç–∞');
                    }
                }
            }
        }

        // ===== UI helper functions (restored) =====
        function formatNumber(n){
            return new Intl.NumberFormat('ru-RU').format(n);
        }
        function getAgeCategory(c){
            return {
                lt3:'–¥–æ 3 –ª–µ—Ç',
                '3_5':'3-5 –ª–µ—Ç (–ø—Ä–æ—Ö–æ–¥–Ω—ã–µ)',
                gt5:'—Å–≤—ã—à–µ 5 –ª–µ—Ç'
            }[c] || c;
        }
        function showLoading(show){
            const el = document.getElementById('loading');
            if (el) el.style.display = show ? 'block' : 'none';
            const btn = document.getElementById('calculateBtn');
            if (btn) btn.disabled = !!show;
        }
        function showError(msg){
            const e = document.getElementById('error');
            if (e){ e.textContent = msg; e.style.display='block'; }
        }
        function hideError(){
            const e = document.getElementById('error');
            if (e){ e.style.display='none'; }
        }
        function hideResult(){
            const card = document.getElementById('resultCard');
            if (card){ card.classList.remove('show'); }
            const share = document.getElementById('shareBtn');
            if (share){ share.style.display='none'; }
        }
        function showToast(message,type='info'){
            const t=document.createElement('div');
            t.className=`toast ${type}`;
            t.textContent=message;
            t.style.cssText=`position:fixed;bottom:20px;left:50%;transform:translateX(-50%);background:${type==='success'?'#10b981':type==='error'?'#ef4444':'#3b82f6'};color:#fff;padding:12px 24px;border-radius:8px;z-index:1000;animation:slideUp .3s ease-out;`;
            document.body.appendChild(t);
            setTimeout(()=>t.remove(),3000);
        }

        // Expose for compatibility with code that may reference window.*
        window.hideResult = hideResult;
        // displayResult is defined above; export it as well for potential wrappers
        if (typeof displayResult === 'function') {
            window.displayResult = displayResult;
        }
    </script>
